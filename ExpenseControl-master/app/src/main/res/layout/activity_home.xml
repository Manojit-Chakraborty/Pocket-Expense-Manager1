<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.admin.expencecontrol.home">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spend"
        android:textAllCaps="false"
        android:onClick="sp"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:background="@drawable/shape"
        android:textColor="#000000"
        android:gravity="center"
        android:id="@+id/bn1"
        android:padding="10dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cash in"
        android:textAllCaps="false"
        android:onClick="cain"
        android:textSize="30sp"
        android:background="@drawable/shape"
        android:textColor="#000000"
        android:gravity="center"
        android:id="@+id/bn2"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        />

    <Button

        android:background="@drawable/shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:textAllCaps="false"
        android:onClick="add"
        android:padding="8dp"
        android:textSize="30sp"

        android:textColor="#252424"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:id="@+id/button2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <TextView
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:background="#005b4a"
        android:textColor="#ffffff"
        android:gravity="center"
        android:padding="5dp"
        android:text="Monthly Summary"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Month"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textColor="#e7e7e7"
            android:gravity="left"
            android:layout_weight="3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#e9fff3"
            android:text="Rs."
            android:gravity="right"
            android:id="@+id/rsmonth"
            android:layout_weight="7" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Income"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textColor="#e7e7e7"
            android:gravity="left"
            android:layout_weight="3"
            />
        <TextView
            android:id="@+id/rsincome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#e9fff3"
            android:text="Rs."
            android:gravity="right"
            android:layout_weight="7" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Spend"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textColor="#e7e7e7"
            android:gravity="left"
            android:layout_weight="3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#e9fff3"
            android:text="Rs."
            android:id="@+id/rsspend"
            android:gravity="right"
            android:layout_weight="7" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:background="#00005b4a"
            android:textColor="#e7e7e7"
            android:gravity="left"
            android:id="@+id/bn3"
            android:layout_weight="3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#e9fff3"
            android:text="Rs."
            android:gravity="right"
            android:layout_weight="7"
            android:id="@+id/rs3" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>